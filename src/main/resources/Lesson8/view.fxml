<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane minHeight="300.0" minWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Lesson8.ViewController">
   <center>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="button" mnemonicParsing="false" onMouseClicked="#onButtonClicked" text="-">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <TextField fx:id="textField" />
            <Button id="button1" fx:id="button1" mnemonicParsing="false" onMouseClicked="#onButton1Clicked" text="+">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="reset" mnemonicParsing="false" onMouseClicked="#onResetClicked" prefHeight="26.0" prefWidth="232.0" text="Сброс">
               <opaqueInsets>
                  <Insets right="10.0" />
               </opaqueInsets>
            </Button>
            <Button fx:id="save" mnemonicParsing="false" onMouseClicked="#onSaveClicked" prefHeight="26.0" prefWidth="257.0" text="Сохранить">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
